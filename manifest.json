{
  "name": "HTML Academy CheckList",
  "version": "1.2",
  "description": "HTML Academy Checklist for Student Course Projects",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["https://up.htmlacademy.ru/*/project/*"],
      "css": ["app.css"],
      "js": ["app.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "manifest_version": 2
}
